datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Supplier {
  id           String   @id @default(uuid())
  name         String
  contactEmail String
  createdAt    DateTime @default(now())
  products     Product[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  supplierId  String
  inventory   Inventory?
}

model Warehouse {
  id        String   @id @default(uuid())
  name      String
  location  String
  inventories Inventory[]
}

model Inventory {
  id          String     @id @default(uuid())
  warehouse   Warehouse  @relation(fields: [warehouseId], references: [id])
  warehouseId String
  product     Product    @relation(fields: [productId], references: [id])
  productId   String
  quantity    Int
  updatedAt   DateTime   @updatedAt
}

model Order {
  id          String    @id @default(uuid())
  product     Product   @relation(fields: [productId], references: [id])
  productId   String
  quantity    Int
  status      OrderStatus  @default(PENDING)
  createdAt   DateTime    @default(now())
  shipment    Shipment?
}

model Shipment {
  id        String   @id @default(uuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  status    ShipmentStatus @default(PREPARING)
  shippedAt DateTime?
  deliveredAt DateTime?
}

enum OrderStatus {
  PENDING
  IN_PRODUCTION
  READY_FOR_SHIPMENT
  IN_TRANSIT
  DELIVERED
}

enum ShipmentStatus {
  PREPARING
  IN_TRANSIT
  DELIVERED
}
